.row
    .col-sm-6
        dl(ng-repeat="message in messages")
            dt {{message.User}}
            p {{ message.Message }}
    .col-sm-6
        form(role="form")
            .form-group
                label User:
                input(type="text", ng-model="user")

        .input-group
            form(ng-submit="send()")
                input(type="text", ng-model="message").form-control
                span.input-group-btn
                    button.btn.btn-primary(type="submit") Go!